            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/JonathanKang/weibird/archive/weibird-0.1.2.tar.gz",
                    "sha256" : "d14e3fa611b93e34f91b87b0fd77ae13b34da899fd7718baffd423917e9f3712"
